<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
    </style>

    <style name="AppNameStyle" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textSize">40sp</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="AppTextView" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="logoBackground" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@drawable/logo_background</item>
        <item name="android:src">@drawable/logo_512_512</item>
    </style>


</resources>